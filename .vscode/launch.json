{
    "version": "0.2.0",
    "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Attach to Docker",
      "runtimeExecutable": "docker-compose",
      "runtimeArgs": ["up"],
      "port": 5858,
      "restart": true,
      "localRoot": "${workspaceRoot}/app/",
      "remoteRoot": "/home/node/app/",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
    ]
  }
